# Clinical BDD Creator - Production Environment Variables
# Copy this file to .env and fill in your actual values

# Security Keys (Generate strong random keys for production)
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-key-here-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# AI Service API Keys (Optional - for advanced features)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Database Configuration (Future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=clinical_bdd
# DB_USER=clinical_bdd_user
# DB_PASSWORD=your-secure-database-password

# Redis Configuration (For caching - future use)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Monitoring Configuration
PROMETHEUS_PORT=8000
GRAFANA_ADMIN_PASSWORD=change-this-admin-password

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=production
PYTHONPATH=/app

# SSL Configuration (Paths to certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance Tuning
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
MEMORY_LIMIT=2GB
CPU_LIMIT=2.0